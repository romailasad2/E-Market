<%- include('../partials/header.ejs') %>


<body>

    <%- include('../partials/navigation.ejs')%>

    <main>
       
        <%if(prods.length>0){%>
            <h1>Cart Products</h1>
            <h3>List of all the products...</h3>
            
            <div class="grid">
                <%prods.forEach(prod => {%>
                    <%prod.products.forEach(product => {%>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%=product.title%></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%=product.imageURL%>" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$<%=product.price%></h2>
                        <p class="product__description"><%=product.description%></p>
                    </div>
                    <div class="card__actions">
                        <a href="/products/<%=prod.id%>" class="btn">Details</a>
                        <form action="/delete-cart" method="POST">
                            <button class="btn">Drop</button>
                            <input type="hidden" name="productID" value="<%=prod.id%>" >
                        </form>
                        <form action="/quantity-cart" method="POST">
                            <h1 >Quantity: <%=product.orderItem.qty%> </h1>
                        </form>
                    </div>
                </article>
                <%})%>
                <%})%>
            </div>
        <%}else{%>
            <h2>No products...</h2>
        <%}%>
       
        
        
    </main>
    
<%- include('../partials/footer.ejs') %>

